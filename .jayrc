#---------------------------------------------------------------
# >>>  .jayrc   <<<
#---------------------------------------------------------------
# shell config 


#---------------------------------------------------------------
# Print to console either .bashrc path or .zshrc path
if [ -f $HOME/.bashrc ]; then
	echo '\n  .bashrc sources --> ~/.jayrc'
else
	echo '\n  .zshrc sources --> ~/.oh-my-zsh'
	echo '\n  .zshrc sources --> ~/.jayrc'
fi

echo '---------------------------------------------------------------'
echo '      .jayrc sets:\n\tpath\n\tglobals\n\taliases' 
# globals
# prompt
# aliases
# source 


#===============================================================
#
###                >>>   PATH   <<<
#
#===============================================================
# Path to pip, pip2, and pip2.7
export PATH="$PATH:$HOME/Library/Python/2.7/bin"


#===============================================================
#
###                  >>> GLOBALS <<<
#
#===============================================================
# Decouple from local
export JAYCI_WORKSPACE=${HOME}/jaycody # my github root 
export JAYCI_USER=${USER}              # me
export JAYCI_HOME=${HOME}              # ~



#===============================================================
#
###                  >>> ALIASES <<<
#
#===============================================================

#---------------------------------------------------------------
#   >>>   Refresh me       <<<
#---------------------------------------------------------------
alias rejay='source ~/.jayrc'
alias rejrc='source ~/.jayrc'

# Set resh for either .bashrc or .zshrc
if [ -f $HOME/.bashrc ]; then
	alias resh='source ~/.bashrc'
else
	alias resh='source ~/.zshrc'
fi


#---------------------------------------------------------------
#   >>>   Take me to....    <<<
#---------------------------------------------------------------
alias jaycody='cd ${JAYCI_WORKSPACE}; ll'
alias jayci='cd ${JAYCI_WORKSPACE}/jayci; ll; tree'
alias ..='cd ..'

# Take me to Amyris Repo
alias repo='cd ${HOME}/repo; ll;'
alias repocm='cd ${HOME}/repo/configuration-management; ll;'

#---------------------------------------------------------------
#   >>>  Edit configs   <<<
#---------------------------------------------------------------
alias vimjrc='vim ${JAYCI_WORKSPACE}/jayci/.jayrc'
alias vimjconfig='vim ${JAYCI_WORKSPACE}/jayci/jayci.cfg'
alias vimjutil='vim ${JAYCI_WORKSPACE}/jayci/scripts/jayci_utilities.sh'
alias vimzrc='vim ${HOME}/.zshrc'
alias vimvimrc='vim ${JAYCI_WORKSPACE}/jayci/.vimrc'
alias vimbrc='vim ${HOME}/.bashrc'


# >>> depracated configs #nostaliga
# alias vimsh='vim ${HOME}/.bash_profile'    # from Owen's bbsh 20130403
# alias vimbrc='vim ${HOME}/.bashrc'
# alias vimarc='vim ${HOME}/.amyrisrc'


#---------------------------------------------------------------
#    >>> Safey and Convenience <<< 
#---------------------------------------------------------------
# Confirm first
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Show usage as human-readable, include total
alias du='du -ch'                   # disk used plus total    
alias df='df -h'                    # disk free
alias dirsize="pwd; du -ch | grep total"

# Make dirs along path 
alias mkdir='mkdir -p'

# Show me, paint the fence
alias h='history'                    # shell history
alias path='echo -e ${PATH//:/\\n}'  # path as single col
alias gitlog='git log --oneline --graph'     # gits by single line

# Please....
alias restart='sudo shutdown -r now'
alias sleep='sudo shutdown -s now'


#---------------------------------------------------------------
#     >>> the 'ls' family <<< 
#---------------------------------------------------------------
# List sizes as human-readable
alias ls='ls -hF'       

# Sort lists by...(show hidden, long format, exclude groups)
alias lk='ls -AlSro'      # Sort by size, biggest last.
alias lt='ls -Altro'      # Sort by date, most recent last.
alias lc='ls -Altcro'     # Sort by change time, most recent last.

# Show more, sort alphanumerically
alias l='pwd; ls -A1'     # Single col, show .dot files,  show '/', '*'
alias la='ls -A'          # Show .dot files, '/' dirs
alias ll='ls -Alo'        # Show hidden, long format, '/' dirs, no group,
alias lal='ls -al'        # Show hidden (and '..") long
alias lsd='\ls -d */'     # Directories only

# List recursively
alias lr='ls -R'          # Recursively
alias tree='tree -Csh'    # Recursively as tree 
alias treela='tree -Csha' # As tree, include hidden


#---------------------------------------------------------------
#       >>> Show Common Usage  <<<
#---------------------------------------------------------------
# List all aliases
alias laliases='grep alias ${JAYCI_HOME}/.jayrc'

# List the 'ls' family
alias lsls="grep 'alias l' ${JAYCI_HOME}/.jayrc"

# List common usage
alias jay='echo     ;
echo ;
echo ---------frequent commands;
echo grep:  search the file;
echo find:  walk a File Directory;
echo whereis:  ex. whereis python = ;
echo rm -rf: remove directory and all files therein, without asking permission;
echo cp -r: copy directory and all files therein;
echo mkdir -p: make mutliptle directories;
echo ">" :  takes output of command at left and WRITES it to file on right;
echo -----ex  cat my.txt ">" your.txt;
echo ----- OR write directly to a file:  cat ">" foo.txt;
echo ;
echo ;'


#---------------------------------------------------------------
#       >>>  EXTRAS   <<<
#---------------------------------------------------------------
# forward the Authentication Agent - from Brian at Pado
# alias ssh="ssh -A"




#===============================================================
#
#    >>> Source configs  <<<
#
#===============================================================
# Set  prompt
echo ""
echo ".jayrc sources --> jayci/configs/jayrc-prompt" 
echo "    ---->  Sets prompt"
source ${JAYCI_WORKSPACE}/jayci/configs/jayrc-prompt

# Find and source .cfg for each repo in the workspace
if [ -d ${JAYCI_WORKSPACE:?} ] && [ "$(ls -A ${JAYCI_WORKSPACE})" ] ; then
    for i in $( ls -1 ${JAYCI_WORKSPACE}/*/*.cfg|egrep -v "nose|setup" );  do # printf "===> %-30s .jayrc ---sources---> $i \n";# 
         echo ""
         echo ".jayrc sources --> $i"
         source $i ;
         done
else
    echo "There are no repos in your JAYCI_WORKSPACE"
fi

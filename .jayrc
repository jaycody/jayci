#---------------------------------------------------------------
# >>>  .jayrc   <<<
#---------------------------------------------------------------
# shell config 


#===============================================================
#
###                  >>> GLOBALS <<<
#
#===============================================================
# Decouple from local
export JAYCI_WORKSPACE=${HOME}/jaycody # my github root 
export JAYCI_USER=${USER}              # me
export JAYCI_HOME=${HOME}              # ~


#===============================================================
#
###                >>> SET PATH   <<<
#
#===============================================================
# Path to pip, pip2, and pip2.7
export PATH="$PATH:$HOME/Library/Python/2.7/bin"


#===============================================================
#
###                  >>> ALIASES <<<
#
#===============================================================

#---------------------------------------------------------------
#   >>>   Refresh me       <<<
#---------------------------------------------------------------
alias rejay='source ~/.jayrc'
alias rejrc='source ~/.jayrc'

# Set resh for either .bashrc or .zshrc
### note: .zshrc sources ---> ~/.jayrc
if [ -f $HOME/.bashrc ]; then
	alias resh='source ~/.bashrc'
else
	alias resh='source ~/.zshrc'
fi


#---------------------------------------------------------------
#   >>>   Take me to....    <<<
#---------------------------------------------------------------
# Take me to my repos
alias jaycody='cd ${JAYCI_WORKSPACE}; ll'
alias jayci='cd ${JAYCI_WORKSPACE}/jayci; ll; tree --dirsfirst -a -I .git'
alias snapcap='cd ${JAYCI_WORKSPACE}/snapcap; ll; tree --dirsfirst -a -I .git'
alias utiliplate='${JAYCI_WORKSPACE}/utiliplate; ll; tree --dirsfirst -a -I .git'
alias ..='cd ..'

# Take me to Amyris Repo
alias repo='cd ${HOME}/repo; ll; tree --dirsfirst -a -L 2'
alias repocm='cd ${HOME}/repo/configuration-management; ll; tree --dirsfirst -a -I .git -L 2'
alias handbook='cd ${HOME}/repo/devops-handbook; ll; tree --dirsfirst -a -I .git'

#---------------------------------------------------------------
#   >>>  Edit configs   <<<
#---------------------------------------------------------------
alias vimjrc='vim ${JAYCI_WORKSPACE}/jayci/.jayrc'
alias vimjconfig='vim ${JAYCI_WORKSPACE}/jayci/jayci.cfg'
alias vimjutil='vim ${JAYCI_WORKSPACE}/jayci/scripts/jayci_utilities.sh'
alias vimzrc='vim ${HOME}/.zshrc'
alias vimvimrc='vim ${JAYCI_WORKSPACE}/jayci/.vimrc'
alias vimbrc='vim ${HOME}/.bashrc'


# >>> depracated configs #nostaliga
# alias vimsh='vim ${HOME}/.bash_profile'    # from Owen's bbsh 20130403
# alias vimbrc='vim ${HOME}/.bashrc'
# alias vimarc='vim ${HOME}/.amyrisrc'


#---------------------------------------------------------------
#    >>> Safey and Convenience <<< 
#---------------------------------------------------------------
# Confirm first
alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'

# Show usage as human-readable, include total
alias du='du -ch'                   # disk used plus total    
alias df='df -h'                    # disk free
alias dirsize="pwd; du -ch | grep total"

# Make dirs along path 
alias mkdir='mkdir -p'

# Show me, paint the fence
alias h='history'                    # shell history
alias path='echo -e ${PATH//:/\\n}'  # path as single col
alias gitlog='git log --oneline --graph'     # gits by single line

# Please....
alias restart='sudo shutdown -r now'
alias sleep='sudo shutdown -s now'


#---------------------------------------------------------------
#     >>> the 'ls' family <<< 
#---------------------------------------------------------------
# List sizes as human-readable
alias ls='ls -hF'       

# Sort lists by...(show hidden, long format, exclude groups)
alias lk='ls -AlSro'      # Sort by size, biggest last.
alias lt='ls -Altro'      # Sort by date, most recent last.
alias lc='ls -Altcro'     # Sort by change time, most recent last.

# Show more, sort alphanumerically
alias l='ls -A1'     # Single col, show .dot files,  show '/', '*'
alias la='ls -A'          # Show .dot files, '/' dirs
alias ll='ls -Alo'        # Show hidden, long format, '/' dirs, no group,
alias lal='ls -al'        # Show hidden and long
alias lsd='\ls -A1 -d */'     # Directories only

# List recursively
alias lr='ls -R'          # Recursively
alias tree='tree -Csh'    # Recursively as tree 
alias treela='tree -Csha' # As tree, include hidden


#---------------------------------------------------------------
#       >>> Show Aliases and Common Usage  <<<
#---------------------------------------------------------------
# List all aliases
alias lalias='grep alias ${JAYCI_HOME}/.jayrc'

# List the 'ls' family
alias lsls="grep 'alias l' ${JAYCI_HOME}/.jayrc"

# 'jay' to list common usage 
alias jay='echo     ;
echo ;
echo lalias:  \\t list aliases;
echo lsls:    \\t\\t list the 'ls' family;
echo ;
echo -----------TAKE ME TO....-------------;
echo jaycody jayci repo repocm; 
echo code foo: open foo in VSCode;
echo ;
echo -----------OPEN IN VIM-------------;
echo vimjrc, vimjconfig, vimjutil, vimvimrc, vimzrc;
echo ;
echo -----------INFO-------------;
echo h=history, path, gitlog;
echo du, df, dirsize -- disk used, disk free, dirsize;
echo ;
echo -----------LIST-------------;
echo lk, lt, lc: size, date, change date, big and new last;
echo l, la, ll, lal;
echo lsd: dir only;
echo lr: recursively;
echo ;
echo -----------FREQUENT COMMANDS-------------;
echo grep: \\t search the file;
echo find: \\t walk a File Directory;
echo whereis:  ex. whereis python = ;
echo rm -rf: remove directory and all files therein, without asking permission;
echo cp -r: \\t copy directory and all files therein;
echo mkdir -p: make mutliptle directories along the path as needed;
echo ">" : \\t  takes output of command at left and WRITES it to file on right;
echo \\t -----ex  cat my.txt ">" your.txt;
echo \\t ----- OR write directly to a file:  cat ">" foo.txt;
echo ;
echo ;'
#---------------------------------------------------------------

#---------------------------------------------------------------
#       >>>  EXTRAS   <<<
#---------------------------------------------------------------
# forward the Authentication Agent - from Brian at Pado
# alias ssh="ssh -A"





echo ""
echo ""
echo "================================================================="
echo "SHELL CONFIG STEPS"
echo "================================================================="
if [ -f $HOME/.bashrc ]; then
	echo '\t  IN ~/.bashrc --> $ source ~/.jayrc'
else
    echo "[1] .zshrc ---> do:"
	echo '\t $ source ~/.oh-my-zsh'
	echo '\t $ source ~/.jayrc@ -> JAYCI_WORKSPACE/jayci/.jayrc'
fi
echo ""
echo '[2] .jayrc ---> do:'
echo '\tPATH & GLOBALS\n\taliases'
echo '\tsource proj .cfg' 
echo '-----------------------------------------------------------------'


#---------------------------------------------------------------
#       >>>  SOURCE <project>.cfg   <<<
#---------------------------------------------------------------
if [ -d ${JAYCI_WORKSPACE:?} ] && [ "$(ls -A ${JAYCI_WORKSPACE})" ] ; then
    for i in $( ls -1 ${JAYCI_WORKSPACE}/*/*.cfg|egrep -v "nose|setup" );  do # printf "===> %-30s .jayrc ---sources---> $i \n";# 
         # Walk jaycody/ ; source each <project>/*.cfg ; let each .cfg list files they source.
         echo ""
         echo ""
         #echo "-----------------------------------------------------------------"
         echo "================================================================="
         echo ".jayrc --> $ source $i"
         echo "================================================================="
         source $i;
         done
else
    echo "There are no .cfg files in your JAYCI_WORKSPACE repos."
fi
